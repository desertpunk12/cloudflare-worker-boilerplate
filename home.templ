package main

import "cloudflare-worker-boilerplate/components"

// Shared CSS Classes
const (
	// Hero shared classes
	btnBase = "flex h-12 items-center justify-center gap-2 rounded-full px-8 text-base font-bold transition-all"

	// Navbar shared classes
	btnSocials = ""

	// Gallery shared classes
	galleryCard         = "group relative aspect-[3/4] cursor-pointer overflow-hidden rounded-2xl md:rounded-3xl shadow-md"
	galleryCardOffset   = "md:translate-y-8"
	galleryCardImage    = "h-full w-full bg-center bg-cover transition-transform duration-700 group-hover:scale-110"
	galleryCardOverlay  = "absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-60 transition-opacity group-hover:opacity-80"
	galleryCardContent  = "absolute bottom-0 left-0 p-4 translate-y-4 transition-transform duration-300 group-hover:translate-y-0"
	galleryCardTitle    = "text-lg font-bold text-white"
	galleryCardSubtitle = "text-xs font-medium text-white/80 opacity-0 transition-opacity delay-75 duration-300 group-hover:opacity-100"

	// Footer shared classes
	footerButton = "text-text-muted transition-colors hover:text-primary dark:text-gray-500"
)

templ Home() {
